        <Label Content="Ключ:" HorizontalAlignment="Left" Margin="285,126,0,0" VerticalAlignment="Top" Grid.Column="1" Height="28" Width="54"/>
        <Label Content="Двоичный вид сообщения:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="520,102,0,0" Grid.Column="1" Height="26" Width="162"/>
