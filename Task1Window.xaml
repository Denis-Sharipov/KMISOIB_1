        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KMiSOIB"
        mc:Ignorable="d"
        Title="Task1Window" Height="459.034" Width="1166.999">
    <Grid Margin="0,0,2,0">
