        <Label Content="Перестановка:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="591,130,0,0" Grid.Column="1" Height="26" Width="89"/>
        <TextBox x:Name="SubstituteTB" HorizontalAlignment="Left" Height="23" Margin="685,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="450" Grid.Column="1" IsReadOnly="True"/>
        <Label Content="Блок R расширенный:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="549,218,0,0" Grid.Column="1" Height="26" Width="131"/>
        <TextBox x:Name="ExtenderRTB" HorizontalAlignment="Left" Height="23" Margin="685,218,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="450" Grid.Column="1" IsReadOnly="True"/>
        <Label Content="Сложение расширенного блока R ключом по модулю 2:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="356,272,0,0" Grid.Column="1" Height="26" Width="324"/>
        <TextBox x:Name="SumTB" HorizontalAlignment="Left" Height="23" Margin="685,274,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="450" Grid.Column="1" IsReadOnly="True" TextChanged="SumTB_TextChanged"/>
        <Label Content="S-преобразование:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="562,299,0,0" Grid.Column="1" Height="26" Width="118"/>
        <TextBox x:Name="Substitute2TB" HorizontalAlignment="Left" Height="23" Margin="685,302,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="450" Grid.Column="1" IsReadOnly="True" TextChanged="Substitute2TB_TextChanged"/>
        <Label Content="Преобразованный ключ:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,246,0,0" Grid.Column="1" Height="26" Width="150"/>
        <TextBox x:Name="KeyBinaryTB" HorizontalAlignment="Left" Height="23" Margin="685,246,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="450" Grid.Column="1" IsReadOnly="True"/>
        <Label Content="Р-преобразование + блок L:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="510,327,0,0" Grid.Column="1" Height="26" Width="170"/>
        <TextBox x:Name="RBlock" HorizontalAlignment="Left" Height="23" Margin="685,330,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="450" Grid.Column="1" IsReadOnly="True" TextChanged="Substitute2TB_TextChanged"/>
        <Label Content="Конечная перестановка:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,361,0,0" Grid.Column="1" Height="26" Width="152"/>
        <TextBox x:Name="ConcatAndSumTB" HorizontalAlignment="Left" Height="23" Margin="685,363,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="450" Grid.Column="1" IsReadOnly="True" TextChanged="ConcatAndSumTB_TextChanged"/>
        <Label Content="Задание №1. &#xD;&#xA;Алгоритм шифрования DES. &#xD;&#xA;. " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="38,10,0,0" Height="44" Width="930" Grid.Column="1"/>
