            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="MessageTB" HorizontalAlignment="Left" Height="25" Margin="347,99,0,0" TextWrapping="Wrap" Text="МАЗУНИН " VerticalAlignment="Top" Width="115" Grid.Column="1" MaxLength="8"/>
        <TextBox x:Name="KeyTB" HorizontalAlignment="Left" Height="24" Margin="346,130,0,0" TextWrapping="Wrap" Text="ГЛЕБОВИЧ" VerticalAlignment="Top" Width="115" Grid.Column="1" MaxLength="8" TextChanged="KeyTB_TextChanged"/>
